<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:src="@drawable/homepage"
    android:scaleType="centerCrop"
    android:id="@+id/homeimg">
</ImageView>



        <Button
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="See Details"
            android:backgroundTint="@color/primary"
            android:layout_alignBottom="@+id/homeimg"
            android:layout_centerInParent="true"
            android:layout_marginBottom="40dp"
            android:textSize="17dp"
            android:id="@+id/pindah"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sensoji Temple"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_marginTop="450dp"
            android:fontFamily="@font/poppinsmedium"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:id="@+id/judul"/>

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/judul"
            android:text="it is tokyo's olders temple and one of its most significant. Formerly associated with the tandai sec of the bhudism."
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/white"
            android:layout_marginStart="30dp"
            android:textSize="17sp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>